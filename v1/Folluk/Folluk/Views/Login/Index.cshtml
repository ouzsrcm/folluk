@model Folluk.Models.Users.ILogin
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Giriş yapın - Folluk</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container body-content">

        <nav class="navbar navbar-default navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="/">FOLLUK</a>
                </div>
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li><a href="/">Anasayfa</a></li>
                    </ul>
                </div>
            </div>
        </nav>

        <div class="container">

            <div class="well-sm">

                <div class="row">

                    <div class="col-md-3">

                        <h4>Giriş yapın</h4>
                        <hr />
                        <p>
                            Lütfen bilgilerinizi kullanarak giriş yapın.
                        </p>

                    </div>

                    <div class="col-md-9">

                        <div class="well well-sm">

                            <form action="/Login" method="post">
                                <div class="form-group">
                                    <label for="Email">Eposta</label>
                                    <input type="email" class="form-control" id="Email" placeholder="Eposta">
                                </div>
                                <div class="form-group">
                                    <label for="Password">Parola</label>
                                    <input type="password" class="form-control" id="Password" placeholder="Parola">
                                </div>
                                <button type="submit" class="btn btn-primary">Giriş Yap</button>
                            </form>

                            @if (Model.OWarning != null)
                            {
                                if (Model.OWarning.Status == true)
                                {
                                    <div class="alert alert-@Model.OWarning.Css" role="alert">@Model.OWarning.Body</div>
                                }
                            }

                        </div>

                    </div>

                </div>

            </div>

        </div>

        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Tüm hakları saklıdır.</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>